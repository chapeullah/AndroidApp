<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/textViewPowerWolves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Текущий трек"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/editTextPowerWolves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Введите название"
            android:inputType="text"
            android:ems="10"
            android:text="DemonAreGirlBestFriend"
            app:layout_constraintTop_toBottomOf="@+id/textViewPowerWolves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/buttonPrevPowerWolves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Назад"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPausePowerWolves"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonPausePowerWolves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пауза"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevPowerWolves"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextPowerWolves"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonNextPowerWolves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Вперёд"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves"
            app:layout_constraintStart_toEndOf="@+id/buttonPausePowerWolves"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
